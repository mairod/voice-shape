@import url('https://fonts.googleapis.com/css?family=Open+Sans|Playfair+Display:400');

body
    background-color: #eaeaea
    display: flex
    overflow: hidden
    font-family: 'Open Sans', sans-serif;
    cursor: grab
    &.grabbing
        cursor: grabbing

#loader
    background-color: black
    p
        color: white
        font-size: .6em
        position: fixed
        display: block
        top 50%
        left: 50%
        letter-spacing: 5px
        margin-top: 60px
        transform: translate(-50%, -50%)
        pointer-events: none

h1
    font-family: 'Playfair Display', serif;
    font-weight: 400
    color white
    font-size 2em
    letter-spacing: .05em
    position: fixed
    display: block
    top 50%
    left: 50%
    letter-spacing: 2px
    transform: translate(-50%, -50%)
    user-select none
    pointer-events: none
    text-align: center
    white-space nowrap

    for num in (1..50)
        span:nth-of-type({num})
            transition-delay: "%ss" % (.06*num)
    
    span
        display: inline-block
        opacity: 0
        transform: translate(0, -30px) rotateX(45deg)
        transition: all .8s cubic-bezier(0.355, 0.035, 0.255, 0.965)

    &.active
        span
            opacity 1
            transform: translate(0, 0)

.dsc
    color: white
    font-size: .6em
    position: fixed
    display: block
    top 50%
    left: 50%
    letter-spacing: 5px
    margin-top: 60px
    transform: translate(-50%, -50%)
    pointer-events: none
    opacity: 0
    transition: opacity 1s cubic-bezier(0.355, 0.035, 0.255, 0.965)
    &.active
        opacity: 1

.fps
    top 0
    left 0
    transform-origin: top left
    transform: scale(.7)

#container
    width: 100%
    height: 100%
    position: fixed
    top: 0
    left: 0
    background-color: black
    z-index: -1

    canvas
        width: 100%
        height: 100%
        position: fixed
        opacity: 0
        transition: opacity .3s ease
        &.active
            opacity: 1

.mic
    position: fixed
    bottom: 30px
    width: 30px
    height: 30px
    left: 50%
    margin-left: -15px
    transform: translate(0, 30px) rotateX(45deg)
    opacity: 0
    transition: all 1s cubic-bezier(0.355, 0.035, 0.255, 0.965)
    overflow hidden
    background-size: cover

    div
        overflow: hidden

    .cover
        position: absolute
        top: 0
        left: 0
        width 30px
        height 30px

    .background
        opacity .3
    
    .progress
        opacity 1
        height: 0
        position: relative
        
    &.active
        opacity: 1
        transform: translate(0, 0)

.restart
    position: fixed
    bottom: 30px
    right: 60px
    font-size: 1em
    font-family: 'Playfair Display', serif
    color: white
    letter-spacing: .05em
    pointer-events none
    cursor: pointer

    :hover
        opacity: .5

    for num in (1..20)
        span:nth-of-type({num})
            transition-delay: "%ss" % (.06*num)
    
    span
        display: inline-block
        opacity: 0
        transform: translate(0, -30px) rotateX(45deg)
        transition: all .8s cubic-bezier(0.355, 0.035, 0.255, 0.965)

    &.active
        pointer-events all
        span
            opacity 1
            transform: translate(0, 0)